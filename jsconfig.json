{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@db/*": [
        "./src/db/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}